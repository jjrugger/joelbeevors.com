# top-most EditorConfig file
root = true

# Unix-style newlines, 2 spaces for indentation and default charset of utf-8
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true

# 4 spaces for PHP files (PSR-2) & HTML files
[*.{php,html}]
indent_size = 4

# Tab indentation for makefile (no size specified, defaults to indent_size)
[Makefile]
indent_style = tab
